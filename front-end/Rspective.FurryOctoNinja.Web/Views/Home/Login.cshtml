@{
    ViewBag.Title = "SurveyApp - Login";
    ViewBag.Class = "login-view";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts {
    <script type="text/javascript" src="~/Scripts/app/surveyapp.login.js"></script>
}
<section class="row" ng-controller="LoginController as login">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading"><h4>Sign in</h4></div>
            <div class="panel-body">
                <form name="formLogin" ng-submit="validateForm(formLogin) && login.submit()">
                    <div ng-class="{ 'alert alert-danger': !!(login.errors.overallErrors) }">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default" disabled><i class="glyphicon glyphicon-user"></i></button>
                            </div>
                            <input type="text" class="form-control" name="login" ng-model="login.login" required maxlength="200" placeholder="Username.." />
                        </div>
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button type="button" class="btn btn-default" disabled><i class="glyphicon glyphicon-asterisk"></i></button>
                            </div>
                            <input type="password" class="form-control" ng-model="login.password" name="password" required maxlength="200" placeholder="Password.." />
                        </div>
                        <span ng-if="!!login.errors.overallErrors" ng-repeat="error in login.errors.overallErrors">{{error}}</span>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <button class="btn btn-success pull-right" type="submit" ng-disabled="login.disabled">Sign in</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
