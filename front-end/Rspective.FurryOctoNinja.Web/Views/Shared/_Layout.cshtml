@{
    Layout = null;
}

<!DOCTYPE html>
<html ng-app="surveyapp">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@(ViewBag.Title ?? "SurveyApp")</title>
    <!--[if lt IE 9]>
        <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap-google-plus.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/angular-loading-bar.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/styles.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/styles-mobile.css" />

    <script type="text/javascript" src="~/Scripts/jquery-1.9.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/angular.min.js"></script>

    <script type="text/javascript" src="~/Scripts/d3/d3.min.js"></script>
    <script type="text/javascript" src="~/Scripts/Chart.min.js"></script>

    <script type="text/javascript" src="~/Scripts/app/surveyapp.directives.js"></script>
</head>
<body class="@ViewBag.Class">
    <nav class="navbar navbar-fixed-top header">
        <div class="col-xs-12">
            <div class="navbar-header">
                <a href="http://www.rspective.com" target="_blank" class="rspective">
                    <span>
                        <object type="image/svg+xml" data="~/Content/Images/rspective.svg" class="skrollable skrollable-between">rspective</object>
                    </span>
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right" ng-show="isAuthenticated()" ng-cloak>
                    <li><a href="#" id="btnToggle" ng-click="logout()"><i class="glyphicon glyphicon-log-out"></i></a></li>
                </ul>
            </div>
        </div>
    </nav>

    @RenderSection(name: "menu", required: false)

    <div class="container" id="main">
        <div class="container-centered">
            <div class="content">
                @RenderBody()
            </div>
        </div>
    </div>

    <div id="modal-error-500" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Internal server error</h4>
                </div>
                <div class="modal-body">
                    <p>Something went wrong. Please try again later or contact your administrator.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

    <script type="text/javascript" src="~/Scripts/angular-loading-bar.js"></script>
    <script type="text/javascript" src="~/Scripts/angular-local-storage.js"></script>
    <script type="text/javascript" src="~/Scripts/angular-route.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/app/surveyapp.js"></script>
    <script type="text/javascript" src="~/Scripts/app/surveyapp.services.js"></script>
    <script type="text/javascript" src="~/Scripts/app/surveyapp.routing.js"></script>
    @RenderSection(name: "scripts", required: false)
</body>
</html>
